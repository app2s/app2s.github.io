# b)
 library(leaps) # install if you dont have it already
 b <-regsubsets(gamble~.,data=teengamb)
 rs <-summary(b)
 rs$which

 AIC <- 47*log(rs$rss/47) + (2:5)*2
 plot(AIC ~ I(1:4), ylab="AIC", xlab="Number of Regressors") 
 which.min(AIC)
 #c)
